/**index.wxss**/
.userinfo {
  position: fixed;
  height: 100%;
  width: 100%;
}

.userinfo-canvas {
  position: absolute;
  width: 700px;
  height: 700px;
  background: white;
  visibility: hidden;
  top: -1000px;
}

.userinfo-avatar {
  width: 320px;
  height: 320px;
  border: 1rpx solid #ccc;
}

.material {
  height: calc(100vh - 800rpx);
}

.get-user-info {
  text-align: center;
  padding: 30rpx 180rpx;
  margin-top: 380rpx;
}

/* 操作框 */
.userinfo-festivalview {
  position: fixed;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-festivalview-topline {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background-image: linear-gradient(to right, rgb(4, 205, 159) 0%, rgb(4, 205, 159) 50%, transparent 50%);
  background-size: 30px 2px;
  background-repeat: repeat-x;
}

.userinfo-festivalview-bottomline {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2px;
  background-image: linear-gradient(to right, rgb(4, 205, 159) 0%, rgb(4, 205, 159) 50%, transparent 50%);
  background-size: 30px 2px;
  background-repeat: repeat-x;
}

.userinfo-festivalview-leftline {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 2px;
  background-image: linear-gradient(to bottom, rgb(4, 205, 159) 0%, rgb(4, 205, 159) 50%, transparent 50%);
  background-size: 2px 30px;
  background-repeat: repeat-y;
}

.userinfo-festivalview-rightline {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 2px;
  background-image: linear-gradient(to bottom, rgb(4, 205, 159) 0%, rgb(4, 205, 159) 50%, transparent 50%);
  background-size: 2px 30px;
  background-repeat: repeat-y;
}

.userinfo-festivalimage {
  width: 100%;
  height: 100%;
}

.userinfo-festivalrotate {
  position: absolute;
  width: 25px;
  height: 25px;
  bottom: -12.5px;
  right: -12.5px;
}